@model AdvancedRoutingApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Category: @ViewBag.Category</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
        <p class="card-text"><strong>Product ID:</strong> @Model.Id</p>
    </div>
</div>

<a href="/Products" class="btn btn-secondary mt-3">Back to Products</a>