@model List<AdvancedRoutingApp.Models.Product>
@{
    ViewData["Title"] = $"{ViewBag.Category} Products";
}

<h2>@ViewBag.Category Products</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>$@product.Price</strong></p>
                        <a href="/Products/@product.Category/@product.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products found in this category.</p>
}

<a href="/Products" class="btn btn-secondary">Back to All Products</a>