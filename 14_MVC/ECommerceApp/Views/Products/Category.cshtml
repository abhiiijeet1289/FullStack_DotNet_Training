@model List<ECommerceApp.Models.Product>
@{
    ViewData["Title"] = $"{ViewBag.Category} Products";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Products">Products</a></li>
        <li class="breadcrumb-item active">@ViewBag.Category</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewBag.Category.ToUpper() Products</h2>
    <span class="badge bg-primary">@Model.Count products found</span>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>$@product.Price</strong></p>
                        <p class="card-text"><small class="text-muted">Stock: @product.StockQuantity</small></p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="/Products/@product.Category/@product.Id" class="btn btn-primary btn-sm">View Details</a>
                            @if (product.StockQuantity > 0)
                            {
                                <form method="post" action="/Products/AddToCart" class="d-inline">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                                </form>
                            }
                            else
                            {
                                <span class="btn btn-secondary btn-sm disabled">Out of Stock</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found in this category.
    </div>
}

<a href="/Products" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to All Products
</a>