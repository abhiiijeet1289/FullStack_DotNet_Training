@model ECommerceApp.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Products">Products</a></li>
        <li class="breadcrumb-item"><a href="/Products/Category/@ViewBag.Category">@ViewBag.Category</a></li>
        <li class="breadcrumb-item active">@Model.Name</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-image fa-10x text-muted"></i>
                <p class="mt-3">Product Image Placeholder</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h1>@Model.Name</h1>
        <h5 class="text-muted mb-3">Category: @Model.Category.ToUpper()</h5>
        
        <div class="mb-3">
            <h3 class="text-primary">$@Model.Price</h3>
        </div>
        
        <div class="mb-3">
            <p><strong>Description:</strong></p>
            <p>@Model.Description</p>
        </div>
        
        <div class="mb-3">
            <p><strong>Stock:</strong> @Model.StockQuantity available</p>
        </div>
        
        @if (Model.StockQuantity > 0)
        {
            <form method="post" action="/Products/AddToCart" class="mb-3">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="row">
                    <div class="col-md-4">
                        <label for="quantity" class="form-label">Quantity:</label>
                        <input type="number" name="quantity" id="quantity" value="1" min="1" max="@Model.StockQuantity" class="form-control" />
                    </div>
                    <div class="col-md-8 d-flex align-items-end">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </form>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> This product is currently out of stock.
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a href="/Products/Category/@ViewBag.Category" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to @ViewBag.Category
    </a>
    <a href="/Products" class="btn btn-outline-secondary">All Products</a>
</div>