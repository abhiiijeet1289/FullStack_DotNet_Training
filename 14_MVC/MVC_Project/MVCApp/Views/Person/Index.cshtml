@{
    ViewData["Title"] = "Person Management";
}

<div class="container mt-4">
    <h2>Person Management System</h2>
    <p class="lead">This demonstrates MVC pattern with simple and complex model binding.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Simple Model Binding</h5>
                </div>
                <div class="card-body">
                    <p>Basic form handling with simple data types (string, int).</p>
                    <a href="@Url.Action("SimpleForm", "Person")" class="btn btn-primary">Simple Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Complex Model Binding</h5>
                </div>
                <div class="card-body">
                    <p>Advanced form handling with complex models and nested objects.</p>
                    <a href="@Url.Action("Create", "Person")" class="btn btn-success">Complex Form</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h4>MVC Pattern Components</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-info">
                    <div class="card-header">
                        <h6>Model</h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Represents data (Person, Address classes)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-header">
                        <h6>View</h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Presents data to user (Razor views)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-header">
                        <h6>Controller</h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Handles user input (PersonController)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>